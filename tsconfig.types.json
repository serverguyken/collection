{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./types",
      "sourceMap": true,
      "strict": true,
      "target": "es6"
    },
    "include": [ "src/types/**/*" ]
  }