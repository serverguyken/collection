{
    "compilerOptions": {
      "baseUrl": ".",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
      "types": ["node", "jest"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./",
      "sourceMap": true,
      "strict": true,
      "target": "es6",
    },
    "exclude": ["node_modules"],
    "include": [ "src/**/*.ts"]
  }